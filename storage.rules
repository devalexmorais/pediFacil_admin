rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regra para pasta users e todas suas subpastas
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para pasta partners e todas suas subpastas
    match /partners/{userId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Permiss천es para banners
    match /banners/{imageId} {
      allow read, write, delete: if true;
    }

    // Permiss천es para advertisements
    match /advertisements/{imageId} {
      allow read, write, delete: if true;
    }

    // Permiss천es para categorias
    match /categories/{imageId} {
      allow read, write, delete: if true;
    }

    // Permiss천es para produtos
    match /products/{filename} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
  }
} 