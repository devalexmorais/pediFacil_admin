rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regra para pasta users e todas suas subpastas
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para pasta partners e todas suas subpastas
    match /partners/{userId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para pasta admin e todas suas subpastas (incluindo advertisements)
    match /admin/{adminId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null && request.auth.uid == adminId;
    }

    // Permissões para produtos
    match /products/{filename} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Permissões para banners
    match /banners/{imageId} {
      allow read, write: if true;
    }

    // Permissões para categorias
    match /categories/{imageId} {
      allow read, write: if true;
    }
  }
} 