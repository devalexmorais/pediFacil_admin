rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permissões para banners
    match /banners/{imageId} {
      allow read: if true;   // Todos podem ler
      allow write: if request.auth != null && request.auth.uid != null;
    }

    // Permissões para categorias
    match /categories/{imageId} {
      allow read: if true;
      allow write: if true;
    }
  }
} 